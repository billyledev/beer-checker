{
  "compilerOptions": {
    "target": "ESNext",

    "module": "CommonJS",
    "esModuleInterop": true,

    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "*": ["node_modules/*"]
    },

    "strict": true,
    "sourceMap": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["dist"],
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "files": true
  }
}
